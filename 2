#include "pipex.h"
#include "libft/ft_printf.h"
#include <fcntl.h>
#include <stdio.h>
#include <sys/wait.h>
#include <unistd.h>

void	cmd_exec_handle_child_exit(t_pipex_state *s, int i)
{
	char	*error_msg;

	error_msg = ft_strdup("pipex: command not found: %s\n");
	if (!error_msg)
	{
		state_free(s);
		exit(127);
	}
	ft_dprintf(STDERR_FILENO, error_msg, s->cmds[i]->path);
	free(error_msg);
	state_free(s);
	exit(127);
}

void	cmd_exec_handle_child(t_pipex_state *s, int fd[2], int i, int t)
{
	close(fd[0]);
	if (t)
	{
		dup2(t, STDOUT_FILENO);
		close(t);
	}
	else
		dup2(fd[1], STDOUT_FILENO);
	close(fd[1]);
	if (execve(s->cmds[i]->path, s->cmds[i]->args, s->envp) == -1)
		cmd_exec_handle_child_exit(s, i);
}

void	cmd_exec(t_pipex_state *state, int i, int target)
{
	pid_t	pid;
	int		fd[2];
	int		status;

	if (pipe(fd) == -1)
		perror("pipex");
	pid = fork();
	if (pid == -1)
		perror("pipex");
	if (pid == 0)
		cmd_exec_handle_child(state, fd, i, target);
	else
	{
		state->last_pid = pid;
		(void)status;
		close(fd[1]);
		if (!target)
			dup2(fd[0], STDIN_FILENO);
		close(fd[0]);
	}
}

void	state_get_in_out_fd(t_pipex_state *state)
{
	int	out_arg;

	out_arg = state->argc - 1;
	state->in_fd = open(state->argv[1], O_RDONLY);
	state->out_fd = open(state->argv[out_arg])

}

int	state_cmds_run(t_pipex_state *state)
{
	int	status;
	int	i;
	int	infile_fd;
	int	out_fd;

	infile_fd = open(state->argv[1], O_RDONLY);
	if (infile_fd > 0)
		dup2(infile_fd, STDIN_FILENO);
	close(infile_fd);
	i = 0;
	while (i < state->argc - 4)
	{
		cmd_exec(state, i, 0);
		i++;
	}
	out_fd = open(state->argv[state->argc - 1], O_WRONLY | O_CREAT | O_TRUNC, 0644);
	if (out_fd == -1)
		return (state_free(state), 126);
	cmd_exec(state, i, out_fd);
	close(out_fd);
	if (waitpid(state->last_pid, &status, 0) == -1)
		perror("pipex");
	if (WIFEXITED(status))
		state->exit_status = WEXITSTATUS(status);
	return (state_free(state), state->exit_status);
}

int main(int argc, char **argv, char **envp) {
	t_pipex_state	state;

	if (argc < 5)
		return (1);
	state_init(&state, argc, argv, envp);
	state_feed(&state);
	if (state.error)
		return (state_free(&state), 127);
	return (state_cmds_run(&state));
}
